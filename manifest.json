// manifest.json
{
  "manifest_version": 3,
  "name": "VIBRARY",
  "version": "1.2",
  "description": "Always-on video rating & playlists with history management",
  "permissions": ["storage","activeTab","scripting","tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content_script.js"],
    "run_at": "document_idle"
  }]
}